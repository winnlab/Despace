<header>
    <div id="header">
        <a class="scroll logo module" data-scroll="#start" data-href="/">
            <img src="{{appState.imgPath}}logo.png" alt="Despace">
        </a>
        <div id="header-lang">
            <ul class="lang">
                <li> <a class="lang-btm" href="/">RU</a> </li> /
                <li> <a class="lang-btm" href="/en">EN</a></li>
            </ul>
        </div>
        <div id="header-scl">
            <ul class="social">
                <li> <div class="scl-btm scl-facebook"> </div> </li>
                <li> <div class="scl-btm scl-tumblr"> </div> </li>
                <li> <div class="scl-btm scl-pinterest"> </div> </li>
            </ul>
        </div>
        <div id="header-menu">
            <ul class="menu">
                <li> <a class="scroll btm" data-scroll="#about"> {{appState.locale.menu.about}}</a> </li>
                <li> <a class="scroll btm" data-scroll="#work"> {{appState.locale.menu.work}}</a> </li>
                <li> <a class="scroll btm"> {{appState.locale.menu.blog}}</a> </li>
                <li> <a class="scroll btm" data-scroll="#contact"> {{appState.locale.menu.contact}}</a> </li>
            </ul>
        </div>
        <div class="clear"></div>
    </div>
</header>

<div id="start" class="pages page1">
    <div class="main-block">
        <p class="slogan">{{appState.locale.slogan.partOne}}</p>
        {{{appState.locale.slogan.partTwo}}}
    </div>

    <div id="scroll-down" class="button-scroll"> </div>
</div>

<div id="about" class="pages page2">
    <div class="about-l"></div>
    <div class="about-r">
        <div class="adorable_table">
            <div class="adorable_cell">
                <p>{{{appState.locale.we.content}}}</p>
            </div>
        </div>
    </div>
    <div class="clear"></div>
</div>

<div class="pages page3">
    <div class="howItWork">
        <div class="capital t-1">
            <p>{{appState.locale.theProcess.knowing}}</p>
        </div>
        <div class="capital t-2">
            <p>{{appState.locale.theProcess.fproject}}</p>
        </div>
        <div class="capital t-3">
            <p>{{appState.locale.theProcess.design}}</p>
        </div>
        <div class="capital t-4">
            <p>{{{appState.locale.theProcess.author}}}</p>
        </div>

        <div class="content">
            <div class="desc b-1">
                {{{appState.locale.theProcess.contentOne}}}
            </div>
            <div class="desc b-2">
                {{{appState.locale.theProcess.contentTwo}}}
            </div>
            <div class="desc b-3">
                {{{appState.locale.theProcess.contentThree}}}
            </div>
        </div>
    </div>
</div>

<div id="work" class="pages page4">
    <div class="works-l"></div>
    <div class="works-r">
        <div class="adorable_table">
            <div class="adorable_cell">
                <div class="wrapper-nav">
                    <div class="nav">
                        <div class="label">
                            <div class="adorable_table">
                                <div class="adorable_cell">
                                    <p>{{appState.locale.ourWorks.ourWorks}}</p>
                                </div>
                            </div>
                        </div>
                        <div class="module btn-arrow-work" data-href="/projects"></div>
                        <div class="clear"></div>
                    </div>
                </div>
            </div>
        </div>
        <div class="clear"></div>
    </div>
</div>

<div id="contact" class="pages page5">
    <div class="wrapper-contact">
        <div class="cont-l" id="googleMap"></div>
        <div class="cont-r"></div>
        <div class="clear"></div>
    </div>
    <div class="wrapper-social">
        <div class="label">
            <p>{{{appState.locale.conctact.followUs}}}</p>
        </div>
        <div class="social">
            <ul>
                <li><div class="facebook"></div></li>
                <li><div class="inst"></div></li>
                <li><div class="twitter"></div></li>
                <li><div class="google-plus"></div></li>
            </ul>
        </div>
    </div>
    <div class="wrapper-address">
        <ul>
            <li><div class="line-1">{{{appState.locale.conctact.lineOne}}}</div></li>
            <li><div class="line-2">{{{appState.locale.conctact.lineTwo}}}</div></li>
            <li><div class="line-3">{{{appState.locale.conctact.lineThree}}}</div></li>
        </ul>
    </div>
</div>
